<body>
  <div class="loading"></div>
  <div class="main-body">
  <header>
    <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
      <img class="app_logo" width="100%" src="images/myloan.png"></img>
    </div>
  </header>

  <!-- <main> -->
    <div>
      <p class="welcome-text">Hi, <span><%= userFullName %></span></p>
    </div>
    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
      <div class="grid align__item">
        <div class="Loan_card">
            <h3 class="Loan_card__title">Payment Details</h3>
            <div class="main-card">
              <p class="pricing-main">Rs.<span><%= amountMain %></span>.<%= amountCents %></p>
            </div>
        </div>
      </div>
    </div>

    <section class="home-body-bg">
      <div class="main-btn-container">
        <div class="button-card article-wrapper">
          <a href="/addloan" id="addloan">
          <div>
            <i class="fa-solid fa-circle-plus fa-2xl" style="color: #f7f7f7;"></i>
          </div>
          <div class="article-body">
              <p>Add<br>Loan</p>
          </div>
        </a>
        </div>
        <div class="button-card article-wrapper">
          <a href="/createevent" id="createevent">
            <div>
              <i class="fa-regular fa-calendar-plus fa-2xl" style="color: #f7f7f7;"></i>
            </div>
            <div class="article-body">
              <p>Create<br>Event</p>
            </div>
          </a>
        </div>
        <div class="button-card article-wrapper">
          <a href="/payloan" id="payloan">
            <div>
              <i class="fa-solid fa-hand-holding-dollar fa-2xl" style="color: #f7f7f7;"></i>
            </div>
            <div class="article-body">
              <p>Pay<br>Loan</p>
            </div>
          </a>
        </div>
      </div>
      <div class="main-btn-container">
        <div class="button-card article-wrapper">
          <a href="/completedloans" id="completedloans">
          <div>
            <i class="fa-solid fa-list fa-2xl" style="color: #ffffff;"></i>
          </div>
          <div class="article-body">
              <p>Completed<br>Loans</p>
          </div>
          </a>
        </div>
        <div class="button-card article-wrapper">
          <a href="/viewevents" id="viewevents">
          <div>
            <i class="fa-solid fa-street-view fa-2xl" style="color: #ffffff;"></i>
          </div>
            <div class="article-body">
              <p>View<br>Events</p>
            </div>
          </a>
        </div>
        <div class="button-card article-wrapper">
          <a href="/viewusers" id="viewusers">
          <div>
            <i class="fa-solid fa-user fa-2xl" style="color: #ffffff;"></i>
          </div>
            <div class="article-body">
              <p>View<br>Users</p>
            </div>
          </a>
        </div>
      </div>
    </section>

    <div class="footer">
      <div class="button-card logout-btn">
        <a href="/logout">
          <div>
            <p>logout</p>
           </div>
        </a>
        </div>
    </div>

  </div>

  <script>
    const payLoanBtn = document.getElementById('payloan');
    const addLoanBtn = document.getElementById('addloan');
    const createEventBtn = document.getElementById('createevent');
    const completedLoanBtn = document.getElementById('completedloans');
    const viewEventBtn = document.getElementById('viewevents');
    const viewUsersBtn = document.getElementById('viewusers');

    const loading = document.querySelector('.loading');
    const mainContent = document.querySelector('.main-body');

    payLoanBtn.addEventListener("click", (e) => {

      displayLoading();

});
    addLoanBtn.addEventListener("click", (e) => {

    displayLoading();

    });
    createEventBtn.addEventListener("click", (e) => {

    displayLoading();

    });

    completedLoanBtn.addEventListener("click", (e) => {

    displayLoading();

    });

    viewEventBtn.addEventListener("click", (e) => {

    displayLoading();

    });

    viewUsersBtn.addEventListener("click", (e) => {

    displayLoading();

    });

function displayLoading() {

  loading.style.display = 'flex';
    mainContent.style.display = 'none';

  setTimeout(() => {
    loading.style.display = 'none';
    mainContent.style.display = '';
  },4000);
}
  </script>
    
  </body>
</html>
